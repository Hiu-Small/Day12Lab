@model IEnumerable<Bai_Thuc_Hanh_1.Models.Student>
@{
    ViewData["Title"] = "Student Management";
    Layout = "~/Views/Shared/MyLayout.cshtml";
    // Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Student Management</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Students</li>
    </ol>

    <!-- SỬA LINK NÀY -->
    <a asp-controller="Student" asp-action="Create" class="btn btn-primary mb-3">Create Student</a>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Student List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã</th>
                            <th>Họ tên</th>
                            <th>Ngày sinh</th>
                            <th>Ngành</th>
                            <th>Giới tính</th>
                            <th>Hệ ĐT</th>
                            <th>Địa chỉ</th>
                            <th>Email</th>
                            <th>Ảnh</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.Id</td>
                                <td>@s.Name</td>
                                <td>@s.DateOfBorth.ToString("dd/MM/yyyy")</td>
                                @{
                                    string branchName = "";
                                    switch (s.Branch)
                                    {
                                        case Branch.IT:
                                            branchName = "CNTT";
                                            break;
                                        case Branch.BE:
                                            branchName = "Kinh tế";
                                            break;
                                        case Branch.CE:
                                            branchName = "Công trình";
                                            break;
                                        case Branch.EE:
                                            branchName = "Điện - Điện tử";
                                            break;
                                    }
                                }
                                <td>@branchName</td>
                                <td>@(s.Gender == Gender.Male ? "Nam" : "Nữ")</td>
                                <td>@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                                <td>@s.Address</td>
                                <td>@s.Email</td>
                                <td>
                                    <img src="~/images/@s.Avatar" alt="avatar" width="60" height="60" style="border-radius:50%;" />
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary">Edit</button>
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var table = document.querySelector("table");
            table.onclick = function onTableClick() {
                if (event.target.tagName !== 'BUTTON') {
                    table.style.backgroundColor = "yellow";
                    setTimeout(() => {
                        table.style.backgroundColor = "";
                    }, 500);
                }
            }
        });
    </script>
}