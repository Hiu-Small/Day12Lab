@*
    Layout chính: MyLayout.cshtml
    Đơn giản, dễ đọc, responsive
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Thanh topnav -->
    <partial name="TopNav" />

    <div class="container-fluid">
        <div class="row">
            <!-- Menu trái -->
            <div class="col-md-3 col-lg-2 bg-light p-0 border-end" style="min-height: 100vh;">
                @* <partial name="LeftMenu" /> *@
                @await Component.InvokeAsync("Render")
            </div> 

            <!-- Nội dung chính -->
            <div class="col-md-9 col-lg-10 p-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <partial name="Footer" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
